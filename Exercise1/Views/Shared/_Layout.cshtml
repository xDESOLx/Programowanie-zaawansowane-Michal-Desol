<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exercise1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Exercise1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Exercise1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="gardenDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Ogród
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="gardenDropdown">
                                <li><a class="dropdown-item" asp-controller="Trees" asp-action="Index">Drzewa</a></li>
                                <li><a class="dropdown-item" asp-controller="GardenFurnitures" asp-action="Index">Meble ogrodowe</a></li>
                                <li><a class="dropdown-item" asp-controller="Tools" asp-action="Index">Narzędzia</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="kitchenDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Kuchnia
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="kitchenDropdown">
                                <li><a class="dropdown-item" asp-controller="Glasses" asp-action="Index">Szklanki</a></li>
                                <li><a class="dropdown-item" asp-controller="Plates" asp-action="Index">Talerze</a></li>
                                <li><a class="dropdown-item" asp-controller="Knives" asp-action="Index">Noże</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="refrigeratorDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Lodówka
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="refrigeratorDropdown">
                                <li><a class="dropdown-item" asp-controller="Meats" asp-action="Index">Mięso</a></li>
                                <li><a class="dropdown-item" asp-controller="Fruits" asp-action="Index">Owoce</a></li>
                                <li><a class="dropdown-item" asp-controller="Vegetables" asp-action="Index">Warzywa</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="libraryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Biblioteka
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="libraryDropdown">
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Książki</a></li>
                                <li><a class="dropdown-item" asp-controller="Authors" asp-action="Index">Autorzy</a></li>
                                <li><a class="dropdown-item" asp-controller="Genres" asp-action="Index">Gatunki</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Exercise1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
